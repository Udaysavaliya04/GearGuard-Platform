<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_maintenance_team_tree" model="ir.ui.view">
        <field name="name">maintenance.team.list</field>
        <field name="model">maintenance.team</field>
        <field name="arch" type="xml">
            <list string="Maintenance Teams">
                <field name="name"/>
                <field name="member_ids" widget="many2many_tags"/>
                <field name="equipment_count"/>
                <field name="request_count"/>
            </list>
        </field>
    </record>

    <record id="view_maintenance_team_form" model="ir.ui.view">
        <field name="name">maintenance.team.form</field>
        <field name="model">maintenance.team</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="member_ids"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_maintenance_team_kanban" model="ir.ui.view">
        <field name="name">maintenance.team.kanban</field>
        <field name="model">maintenance.team</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="color"/>
                <field name="member_ids"/>
                <field name="equipment_count"/>
                <field name="request_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="member_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <span class="badge badge-pill"><i class="fa fa-wrench"/> <field name="equipment_count"/> Equipment</span>
                                    <span class="badge badge-pill"><i class="fa fa-ticket"/> <field name="request_count"/> Requests</span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_maintenance_team" model="ir.actions.act_window">
        <field name="name">Maintenance Teams</field>
        <field name="res_model">maintenance.team</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Maintenance Team
            </p>
            <p>
                Define specialized teams like Mechanics, Electricians, or IT Support
                and assign technicians to each team.
            </p>
        </field>
    </record>

</odoo>