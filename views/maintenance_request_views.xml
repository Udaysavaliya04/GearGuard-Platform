<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Maintenance Request Kanban View (Primary Workspace) -->
    <record id="view_maintenance_request_kanban" model="ir.ui.view">
        <field name="name">maintenance.request.kanban</field>
        <field name="model">maintenance.request</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id" class="o_kanban_small_column" quick_create="false">
                <field name="stage_id"/>
                <field name="color"/>
                <field name="priority"/>
                <field name="name"/>
                <field name="equipment_id"/>
                <field name="maintenance_team_id"/>
                <field name="technician_id"/>
                <field name="request_type"/>
                <field name="scheduled_date"/>
                <field name="is_overdue"/>
                <field name="duration"/>
                <progressbar field="priority" colors='{"0": "success", "1": "warning", "2": "danger", "3": "danger"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{record.is_overdue.raw_value ? 'oe_kanban_color_2' : 'oe_kanban_color_' + kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <!-- Priority Indicator -->
                            <div class="o_dropdown_kanban dropdown" groups="base.group_user">
                                <a role="button" class="dropdown-toggle o-no-caret btn" data-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                    <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                    <ul class="oe_kanban_colorpicker" data-field="color"/>
                                </div>
                            </div>
                            
                            <!-- Overdue Indicator -->
                            <div class="ribbon ribbon-top-right" t-if="record.is_overdue.raw_value">
                                <span class="bg-danger">OVERDUE</span>
                            </div>
                            
                            <div class="o_kanban_record_top mb-2">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <!-- Priority Stars -->
                                <field name="priority" widget="priority"/>
                            </div>
                            
                            <div class="o_kanban_record_body">
                                <div class="row">
                                    <div class="col-12">
                                        <i class="fa fa-wrench"/> <field name="equipment_id"/>
                                    </div>
                                    <div class="col-12">
                                        <i class="fa fa-users"/> <field name="maintenance_team_id"/>
                                    </div>
                                    <div class="col-12" t-if="record.scheduled_date.raw_value">
                                        <i class="fa fa-calendar"/> <field name="scheduled_date" widget="date"/>
                                    </div>
                                    <div class="col-12" t-if="record.duration.raw_value">
                                        <i class="fa fa-clock-o"/> <field name="duration"/> hours
                                    </div>
                                </div>
                                
                                <!-- Request Type Badge -->
                                <div class="mt-2">
                                    <span t-if="record.request_type.raw_value == 'corrective'" class="badge badge-danger">
                                        <i class="fa fa-exclamation-triangle"/> Corrective
                                    </span>
                                    <span t-if="record.request_type.raw_value == 'preventive'" class="badge badge-info">
                                        <i class="fa fa-calendar-check-o"/> Preventive
                                    </span>
                                </div>
                            </div>
                            
                            <div class="o_kanban_record_bottom mt-2">
                                <div class="oe_kanban_bottom_left">
                                    <!-- Technician Avatar -->
                                    <field name="technician_id" widget="many2one_avatar_user"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="activity_ids" widget="kanban_activity"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Maintenance Request Tree View -->
    <record id="view_maintenance_request_tree" model="ir.ui.view">
        <field name="name">maintenance.request.tree</field>
        <field name="model">maintenance.request</field>
        <field name="arch" type="xml">
            <tree string="Maintenance Requests" decoration-danger="is_overdue == True" decoration-muted="stage_id.done == True">
                <field name="name"/>
                <field name="equipment_id"/>
                <field name="category_id"/>
                <field name="request_type"/>
                <field name="maintenance_team_id"/>
                <field name="technician_id" widget="many2one_avatar_user"/>
                <field name="stage_id"/>
                <field name="priority" widget="priority"/>
                <field name="scheduled_date"/>
                <field name="duration"/>
                <field name="is_overdue" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Maintenance Request Form View -->
    <record id="view_maintenance_request_form" model="ir.ui.view">
        <field name="name">maintenance.request.form</field>
        <field name="model">maintenance.request</field>
        <field name="arch" type="xml">
            <form string="Maintenance Request">
                <header>
                    <field name="stage_id" widget="statusbar" options="{'clickable': '1', 'fold_field': 'fold'}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_assign_to_me" 
                                type="object" 
                                string="Assign to Me" 
                                class="oe_stat_button" 
                                icon="fa-user"
                                attrs="{'invisible': [('technician_id', '!=', False)]}"/>
                    </div>
                    
                    <widget name="web_ribbon" title="Overdue" bg_color="bg-danger" attrs="{'invisible': [('is_overdue', '=', False)]}"/>
                    
                    <group>
                        <group>
                            <field name="name" placeholder="e.g., Leaking Oil, Computer Not Starting"/>
                            <field name="request_type"/>
                            <field name="priority" widget="priority"/>
                        </group>
                        <group>
                            <field name="request_date"/>
                            <field name="scheduled_date"/>
                            <field name="close_date" attrs="{'invisible': [('close_date', '=', False)]}"/>
                            <field name="is_overdue" invisible="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Equipment">
                            <field name="equipment_id" options="{'no_create': False}"/>
                            <field name="category_id" readonly="1"/>
                        </group>
                        <group string="Assignment">
                            <field name="maintenance_team_id" options="{'no_create': False}"/>
                            <field name="technician_user_ids" invisible="1"/>
                            <field name="technician_id" domain="[('id', 'in', technician_user_ids)]" options="{'no_create': True}"/>
                        </group>
                    </group>
                    
                    <group string="Description">
                        <field name="description" placeholder="Detailed description of the maintenance work needed..."/>
                    </group>
                    
                    <group>
                        <group string="Work Details">
                            <field name="duration" widget="float_time"/>
                        </group>
                    </group>
                    
                    <group string="Internal Notes">
                        <field name="notes" placeholder="Internal notes..."/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Maintenance Request Calendar View -->
    <record id="view_maintenance_request_calendar" model="ir.ui.view">
        <field name="name">maintenance.request.calendar</field>
        <field name="model">maintenance.request</field>
        <field name="arch" type="xml">
            <calendar string="Maintenance Calendar" 
                      date_start="scheduled_date" 
                      color="maintenance_team_id"
                      quick_add="True"
                      mode="month"
                      event_open_popup="true"
                      event_limit="5">
                <field name="name"/>
                <field name="equipment_id"/>
                <field name="maintenance_team_id" filters="1" color="color"/>
                <field name="request_type"/>
                <field name="technician_id" avatar_field="image_128"/>
            </calendar>
        </field>
    </record>

    <!-- Maintenance Request Pivot View -->
    <record id="view_maintenance_request_pivot" model="ir.ui.view">
        <field name="name">maintenance.request.pivot</field>
        <field name="model">maintenance.request</field>
        <field name="arch" type="xml">
            <pivot string="Maintenance Analysis">
                <field name="maintenance_team_id" type="row"/>
                <field name="category_id" type="row"/>
                <field name="stage_id" type="col"/>
                <field name="duration" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Maintenance Request Graph View -->
    <record id="view_maintenance_request_graph" model="ir.ui.view">
        <field name="name">maintenance.request.graph</field>
        <field name="model">maintenance.request</field>
        <field name="arch" type="xml">
            <graph string="Maintenance Analysis" type="bar">
                <field name="maintenance_team_id" type="row"/>
                <field name="request_type" type="col"/>
            </graph>
        </field>
    </record>

    <!-- Maintenance Request Search View -->
    <record id="view_maintenance_request_search" model="ir.ui.view">
        <field name="name">maintenance.request.search</field>
        <field name="model">maintenance.request</field>
        <field name="arch" type="xml">
            <search string="Maintenance Requests">
                <field name="name" string="Request"/>
                <field name="equipment_id"/>
                <field name="maintenance_team_id"/>
                <field name="technician_id"/>
                <field name="category_id"/>
                <separator/>
                <filter string="My Requests" name="my_requests" domain="[('technician_id', '=', uid)]"/>
                <filter string="Unassigned" name="unassigned" domain="[('technician_id', '=', False)]"/>
                <separator/>
                <filter string="Corrective" name="corrective" domain="[('request_type', '=', 'corrective')]"/>
                <filter string="Preventive" name="preventive" domain="[('request_type', '=', 'preventive')]"/>
                <separator/>
                <filter string="Overdue" name="overdue" domain="[('is_overdue', '=', True)]"/>
                <filter string="Open" name="open" domain="[('stage_id.done', '=', False)]"/>
                <filter string="Done" name="done" domain="[('stage_id.done', '=', True)]"/>
                <separator/>
                <filter string="Scheduled This Week" name="scheduled_this_week" 
                        domain="[('scheduled_date', '&gt;=', (context_today() - relativedelta(days=context_today().weekday())).strftime('%Y-%m-%d')),
                                 ('scheduled_date', '&lt;=', (context_today() + relativedelta(days=6-context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Equipment" name="group_equipment" context="{'group_by': 'equipment_id'}"/>
                    <filter string="Category" name="group_category" context="{'group_by': 'category_id'}"/>
                    <filter string="Team" name="group_team" context="{'group_by': 'maintenance_team_id'}"/>
                    <filter string="Technician" name="group_technician" context="{'group_by': 'technician_id'}"/>
                    <filter string="Stage" name="group_stage" context="{'group_by': 'stage_id'}"/>
                    <filter string="Type" name="group_type" context="{'group_by': 'request_type'}"/>
                    <filter string="Scheduled Date" name="group_scheduled_date" context="{'group_by': 'scheduled_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Maintenance Request Action -->
    <record id="action_maintenance_request" model="ir.actions.act_window">
        <field name="name">Maintenance Requests</field>
        <field name="res_model">maintenance.request</field>
        <field name="view_mode">kanban,tree,form,calendar,pivot,graph</field>
        <field name="search_view_id" ref="view_maintenance_request_search"/>
        <field name="context">{'search_default_open': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Maintenance Request
            </p>
            <p>
                Track maintenance work for your equipment. Create corrective requests
                for breakdowns or preventive requests for routine checkups.
            </p>
        </field>
    </record>

    <!-- Maintenance Stage Tree View -->
    <record id="view_maintenance_stage_tree" model="ir.ui.view">
        <field name="name">maintenance.stage.tree</field>
        <field name="model">maintenance.stage</field>
        <field name="arch" type="xml">
            <tree string="Maintenance Stages" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="done"/>
                <field name="is_scrap"/>
                <field name="fold"/>
            </tree>
        </field>
    </record>

    <!-- Maintenance Stage Action -->
    <record id="action_maintenance_stage" model="ir.actions.act_window">
        <field name="name">Maintenance Stages</field>
        <field name="res_model">maintenance.stage</field>
        <field name="view_mode">tree</field>
    </record>

</odoo>
