    <menuitem id="menu_maintenance_stage"
              name="Maintenance Stages"
              parent="menu_maintenance_configuration"
              action="action_maintenance_stage"
              sequence="3"/>

    <!-- Reporting Menu -->
    <menuitem id="menu_maintenance_reporting"
              name="Reporting"
              parent="menu_maintenance_root"
              sequence="50"/>

    <!-- Maintenance Analysis -->
    <menuitem id="menu_maintenance_analysis"
              name="Maintenance Analysis"
              parent="menu_maintenance_reporting"
              action="action_maintenance_request"
              sequence="1"/>

