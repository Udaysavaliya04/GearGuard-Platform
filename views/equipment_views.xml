<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Equipment Tree View -->
    <record id="view_equipment_tree" model="ir.ui.view">
        <field name="name">maintenance.equipment.tree</field>
        <field name="model">maintenance.equipment</field>
        <field name="arch" type="xml">
            <list string="Equipment" decoration-muted="is_scrapped == True">
                <field name="name"/>
                <field name="serial_number"/>
                <field name="category_id"/>
                <field name="department_id"/>
                <field name="employee_id"/>
                <field name="maintenance_team_id"/>
                <field name="location"/>
                <field name="maintenance_open_count"/>
                <field name="is_scrapped" invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Equipment Form View with Smart Button -->
    <record id="view_equipment_form" model="ir.ui.view">
        <field name="name">maintenance.equipment.form</field>
        <field name="model">maintenance.equipment</field>
        <field name="arch" type="xml">
            <form string="Equipment">
                <header>
                    <button name="action_view_maintenance_requests" 
                            string="Create Maintenance Request" 
                            type="object" 
                            class="btn-primary"
                            attrs="{'invisible': [('is_scrapped', '=', True)]}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- SMART BUTTON: Maintenance Count -->
                        <button name="action_view_maintenance_requests" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-ticket"
                                attrs="{'invisible': [('maintenance_count', '=', 0)]}">
                            <div class="o_stat_info">
                                <field name="maintenance_open_count" class="o_stat_value"/>
                                <span class="o_stat_text">Open</span>
                            </div>
                            <div class="o_stat_info">
                                <field name="maintenance_count" class="o_stat_value"/>
                                <span class="o_stat_text">Maintenance</span>
                            </div>
                        </button>
                    </div>
                    
                    <widget name="web_ribbon" title="Scrapped" bg_color="bg-danger" attrs="{'invisible': [('is_scrapped', '=', False)]}"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-warning" attrs="{'invisible': ['|', ('active', '=', True), ('is_scrapped', '=', True)]}"/>
                    
                    <field name="is_scrapped" invisible="1"/>
                    
                    <group>
                        <group string="Equipment Information">
                            <field name="name" placeholder="e.g., CNC Machine, Laptop"/>
                            <field name="serial_number" placeholder="e.g., SN-12345"/>
                            <field name="category_id" options="{'no_create': False}"/>
                            <field name="location" placeholder="e.g., Building A, Floor 2, Room 205"/>
                        </group>
                        <group string="Assignment">
                            <field name="department_id" options="{'no_create': True}"/>
                            <field name="employee_id" options="{'no_create': True}"/>
                            <field name="maintenance_team_id" options="{'no_create': False}"/>
                            <field name="technician_id" domain="[('id', 'in', technician_user_ids)]" options="{'no_create': True}"/>
                            <field name="technician_user_ids" invisible="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Purchase Information">
                            <field name="purchase_date"/>
                        </group>
                        <group string="Warranty">
                            <field name="warranty_start_date"/>
                            <field name="warranty_end_date"/>
                        </group>
                    </group>
                    
                    <group string="Warranty Details">
                        <field name="warranty_info" placeholder="Additional warranty information..."/>
                    </group>
                    
                    <group string="Notes">
                        <field name="notes" placeholder="Additional notes about this equipment..."/>
                    </group>
                    
                    <group string="Status" attrs="{'invisible': [('is_scrapped', '=', False)]}">
                        <field name="scrap_date"/>
                        <field name="active"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Equipment Kanban View -->
    <record id="view_equipment_kanban" model="ir.ui.view">
        <field name="name">maintenance.equipment.kanban</field>
        <field name="model">maintenance.equipment</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="serial_number"/>
                <field name="category_id"/>
                <field name="maintenance_team_id"/>
                <field name="maintenance_open_count"/>
                <field name="is_scrapped"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{record.is_scrapped.raw_value ? 'oe_kanban_color_5' : 'oe_kanban_color_' + kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    <br/>
                                    <small><field name="serial_number"/></small>
                                </div>
                                <span class="float-right badge badge-pill" t-if="record.is_scrapped.raw_value">
                                    <i class="fa fa-ban"/> Scrapped
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="category_id"/>
                                <br/>
                                <field name="maintenance_team_id"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <span class="badge badge-danger" t-if="record.maintenance_open_count.raw_value &gt; 0">
                                        <i class="fa fa-ticket"/> <field name="maintenance_open_count"/> Open
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Equipment Search View -->
    <record id="view_equipment_search" model="ir.ui.view">
        <field name="name">maintenance.equipment.search</field>
        <field name="model">maintenance.equipment</field>
        <field name="arch" type="xml">
            <search string="Equipment">
                <field name="name" string="Equipment"/>
                <field name="serial_number"/>
                <field name="category_id"/>
                <field name="department_id"/>
                <field name="employee_id"/>
                <field name="maintenance_team_id"/>
                <field name="location"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Scrapped" name="scrapped" domain="[('is_scrapped', '=', True)]"/>
                <separator/>
                <filter string="With Open Maintenance" name="open_maintenance" domain="[('maintenance_open_count', '>', 0)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Category" name="group_category" context="{'group_by': 'category_id'}"/>
                    <filter string="Department" name="group_department" context="{'group_by': 'department_id'}"/>
                    <filter string="Maintenance Team" name="group_team" context="{'group_by': 'maintenance_team_id'}"/>
                    <filter string="Employee" name="group_employee" context="{'group_by': 'employee_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Equipment Category Tree View -->
    <record id="view_equipment_category_tree" model="ir.ui.view">
        <field name="name">maintenance.equipment.category.tree</field>
        <field name="model">maintenance.equipment.category</field>
        <field name="arch" type="xml">
            <list string="Equipment Categories">
                <field name="name"/>
                <field name="equipment_count"/>
            </list>
        </field>
    </record>

    <!-- Equipment Category Form View -->
    <record id="view_equipment_category_form" model="ir.ui.view">
        <field name="name">maintenance.equipment.category.form</field>
        <field name="model">maintenance.equipment.category</field>
        <field name="arch" type="xml">
            <form string="Equipment Category">
                <sheet>
                    <group>
                        <field name="name" placeholder="e.g., Vehicles, Computers, Machinery"/>
                    </group>
                    <group string="Notes">
                        <field name="notes" placeholder="Additional information..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Equipment Action -->
    <record id="action_equipment" model="ir.actions.act_window">
        <field name="name">Equipment</field>
        <field name="res_model">maintenance.equipment</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="view_equipment_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add your first Equipment
            </p>
            <p>
                Track all your company assets including machines, vehicles, and computers.
                Assign them to departments or employees and manage their maintenance.
            </p>
        </field>
    </record>

    <!-- Equipment Category Action -->
    <record id="action_equipment_category" model="ir.actions.act_window">
        <field name="name">Equipment Categories</field>
        <field name="res_model">maintenance.equipment.category</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create an Equipment Category
            </p>
            <p>
                Organize your equipment by categories like Vehicles, Computers, or Machinery.
            </p>
        </field>
    </record>

</odoo>
